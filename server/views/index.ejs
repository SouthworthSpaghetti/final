<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <!--<link rel="stylesheet" href="/css/style.css" />-->
  <!-- FEB28 ANTHONY -->
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />
  <script id="newArticle" type="text/x-handlebars-template">
      <article id="{{nextPage}}"></article>
  </script>
  <script id="handleTemplate" type="text/x-handlebars-template">
    <div>
      <form action="/characters/{{handleName}}?_method=PUT" method="post">
        <label>
          <header>
            <h2>{{handleName}}</h2>
          </header>
        </label>
        <label>
          <span>{{handleCount}}</span>
        </label>
        <button type="submit">Upvote</button>
      </form>
    </div>
  </script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters character">
      <article>
        
        <% for(let x = 0; x < results.length; x++) { %>
          <!-- <input type="text" name="title" value="Anthony" placeholder="Anthony">
            <textarea name="description" placeholder="name" value="Anthony"></textarea> -->
            <form action="<%= `/characters/${results[x].name}?_method=PUT` %>" method="post">
              <label>
                <header> 
                  <h2><%= results[x].name %></h2>
                </header>
              </label>
              <label>
                <span>
                  <%= results[x].likes || 0 %>
                </label>
              </span>
              <button type="submit">Upvote</button>
            </form>
            <% } %>
          </article>
          <article id="2"></article>
    </section>
    <!-- <section id="2"></section> -->
      <button id="loadMore" class="<%= next.substring((next.length),(next.length - 1)) %>">Get More:</button>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script><!-- FEB28 ANTHONY -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>
  <!-- FEB28 ANTHONY -->
  <script src="/js/app.js"></script>
</body>

</html>