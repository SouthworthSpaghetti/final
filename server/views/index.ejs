<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <!--<link rel="stylesheet" href="/css/style.css" />-->
  <!-- FEB28 ANTHONY -->
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />
  <script id="handleTemplate" type="text/x-handlebars-template">
    <div>
      <header>
        <h2>{{handleName}}</h2>
    </header>
    <span>{{handleCount}}</span>
    <button>Upvote</button>
    </div>
  
  </script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button class="counter" action="/characters/:<%= results[x].name %>">Upvote</button>
      </div>
      <% } %>

    </section>
      <button id="loadMore">Get More</button>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script><!-- FEB28 ANTHONY -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>
  <!-- FEB28 ANTHONY -->
  <script src="/js/app.js"></script>
</body>

</html>